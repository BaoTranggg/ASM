<body>
    <div class="container">
        <div class="col-md-2 py-2">
            <h1>   </h1>
        </div>
        <a href="/" style="color: rgb(255, 255, 255)" ><h2>ATN SHOP</h2></a>
        <a href="/add-product" class="btn btn-success float-right">Add product</a>
        <table class="table table-hover table-bordered" style="background-color: #a52e34;">
            <thead>
                <tr>
                    <th>product name</th>
                    <th>product type</th>
                    <th>product brand</th>
                    <th>product color</th>
                    <th>product size</th> 
                    <th>product price</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <% product.forEach((entry) => { %>
            <tr ondblclick="handleDeleteproduct('<%= entry.id %>')">
                <td><%= entry.name %></td>
                <td><%= entry.type %></td>
                <td><%= entry.brand %></td>
                <td><%= entry.color %></td>
                <td><%= entry.size %></td>
                <td><%= entry.price %></td>
                <td>
                    <input class="btn btn-primary" type="button" value="Update"
                        onclick="handleUpdateproduct('<%= entry.id %>')">
                </td>
                <td>
                    <input class="btn btn-danger" type="button" value="Delete"
                        onclick="handleDeleteproduct('<%= entry.id %>')">
                </td>
            </tr>
            <% }) %>
        </table>
        <script>
            function handleUpdateproduct(value) {
                $(location).attr('href', '/update-product/' + value);
            }
            function handleDeleteproduct(value) {
            $.ajax({
                url: '/' + value,
                type: 'Delete',
                success: function (result) {
                    $(location).attr('href', '/list');
                }
            })
            }
        </script>
    </div>
</body>
